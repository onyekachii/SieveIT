<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:SeiveIT.Views"
             x:Class="SeiveIT.Views.LobbyPage">
    <VerticalStackLayout>
        <Grid 
            Margin="0, 0, 0, 50"
            ColumnDefinitions="*, Auto" 
            RowDefinitions="*">
            <Label 
                FontFamily="Cormorant"
                FontSize="24"
                FontAttributes="Bold"
                Text="Projects" 
                Grid.Row="0" 
                Grid.Column="0" />

            <Button 
                Text="Create Project" 
                Clicked="displayPopup" 
                Grid.Row="0" 
                Grid.Column="1"/>
        </Grid>        
        <views:ProjectCardListView HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>