<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeiveIT.Views.ProjectCardView">
    <Border
        Margin="10"        
        WidthRequest="{OnPlatform iOS='200', Android='200', Default='300'}"
        Padding="15">
        <Border.Shadow>
            <Shadow 
                Brush="Black" 
                Opacity="0.3" 
                Offset="2,2" 
                Radius="3">                
            </Shadow>
        </Border.Shadow>
        <Border.GestureRecognizers>
            <TapGestureRecognizer 
                Command="{Binding GotoProjectCommand}" 
                CommandParameter="{Binding Id}" />
        </Border.GestureRecognizers>
        <StackLayout>            
            <Label 
                Text="{Binding Title}" 
                HorizontalTextAlignment="Center"
                Padding="10, 0"
                FontFamily="OpenSansSemibold"
                FontSize="{OnPlatform iOS='Small', Android='Small', Default='15'}" 
                FontAttributes="Bold" />
            <Label 
                Text="{Binding Date, StringFormat='{0:dd MMM, yyyy}'}"
                HorizontalTextAlignment="Center"
                FontSize="{OnPlatform iOS='Small', Android='Small', Default='14'}" 
                FontAttributes="None"/>
        </StackLayout>
    </Border>
</ContentView>
