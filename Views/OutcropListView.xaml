<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SeiveIT.Utilities.Converter"
             xmlns:views="clr-namespace:SeiveIT.Views"
             x:Class="SeiveIT.Views.OutcropListView">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:BoolToInverseBoolConverter x:Key="BoolNegationConverter"/>
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid RowDefinitions="*, Auto">
        <CollectionView IsVisible="{Binding HasOutcrops}" 
                        ItemsSource="{Binding outcrops}"
                        Grid.Row="0">
            <CollectionView.ItemsLayout>
                <GridItemsLayout x:Name="MyItemsLayout" 
                                 Span="3"
                                 Orientation="Vertical"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:OutcropView/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label IsVisible="{Binding HasOutcrops, Converter={StaticResource BoolNegationConverter}}" 
               Text="no previous projects..."
               Grid.Row="1"/>
    </Grid>
</ContentView>