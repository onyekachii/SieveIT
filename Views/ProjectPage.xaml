<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeiveIT.Views.ProjectPage"
             xmlns:views="clr-namespace:SeiveIT.Views">

    <Grid x:Name="mainlayout" RowDefinitions="Auto, *">
        <Grid
            Margin="0,0,0,50"
            ColumnDefinitions="*, Auto"
            RowDefinitions="*"
            Grid.Row="0">
            <Label
                FontFamily="Cormorant"
                FontSize="24"
                FontAttributes="Bold"
                Text="Outcrops" 
                Grid.Row="0" 
                Grid.Column="0" />
            <Button 
                Text="New Outcrop" 
                Clicked="displayPopup" 
                Grid.Row="0" 
                Grid.Column="1"/>

        </Grid>
        <views:OutcropListView Grid.Row="1"
            x:Name="OutcropContainer"
            HorizontalOptions="Fill"
            VerticalOptions="Fill" />

        <!--<ContentView x:Name="OutcropContainer"
                 Grid.Row="1" />-->
        
    </Grid>
</ContentPage>